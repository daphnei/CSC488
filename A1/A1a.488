%Author Adam Robinson-Yu

begin

    % OPERATIONS BETWEEN VARIABLES AND CONSTANTS

    integer number
    number <= -1           % = -1
    put "Number should be -1. Got: ", number, skip
    
    number <= -1 * number  % = 1
    put "Number should be 1. Got: ", number, skip
    
    number <= number + 1   % = 2
    put "Number should be 2. Got: ", number, skip

    number <= number * 4   % = 8
    put "Number should be 8. Got: ", number, skip

    number <= number - 2   % = 6
    put "Number should be 6. Got: ", number, skip

    number <= number / 3   % = 2
    put "Number should be 2. Got: ", number, skip

    % OPERATIONS BETWEEN MULTIPLE VARIABLES AND CONSTANTS
    integer a, b, c
    a <= 1
    b <= 2
    c <= 3
    put "6 = ", (a + b + c), skip
    put "6 = ", (a * b * c), skip
    put "4 = ", (a * b * c - 2), skip
    put "8 = ", (a * b + c * 2), skip
    put "12 = ", (a * (b + c) * 2), skip

    % OPERATIONS ON BOOLEANS

    procedure check_bool(boolean expected, boolean actual)
    begin
        if (expected)
        then
            put "Expected true, "
        else
            put "Expected false, "
        end
        
        if (actual)
        then
            put "Got true, ", skip
        else
            put "Gor false, ", skip
        end

        return
    end

    boolean bool
    bool <= !false                % = true
    check_bool(true, bool)

    bool <= bool & true & false   % = false
    check_bool(false, bool)

    bool <= bool | true           % = true
    check_bool(true, bool)

    % Are the comparison operators applicable to bools and numbers?
    % According to the spec's comments, this is not allowed, so we'll leave these out.

    bool <= bool = false          % = false
    check_bool(false, bool)

    % bool <= bool != true          % = true
    check_bool(true, bool)

    % EQUALITY OPERATIONS

    integer n1
    integer n2

    n1 <= 10
    n2 <= 20

    bool <= n1 = n2     % = false
    check_bool(false, bool)

    bool <= n1 != n2    % = true
    check_bool(true, bool)

    bool <= n1 < n2     % = true
    check_bool(true, bool)

    bool <= n1 > n2     % = false
    check_bool(false, bool)

    bool <= n1 >= 10     % = true
    check_bool(true, bool)

    bool <= n1 <= 10     % = true
    check_bool(true, bool)

end