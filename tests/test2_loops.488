begin
	integer count
	integer count2	
	count <= 0
	count2 <= 5	
	
	%While loop
	while count <= 50 do
		count <= count +1
		count2 <= count -10
		if count2 = 6 then
			%Exit from containing loop 
			exit
			end

	end

	%Other while loop
	while count <= 50 do
		count <= count +1
		count2 <= count - 10
		%Exit from containing loop with a condition
		exit when count2 = 5

	end

	%loop
	loop
		count <= count + 1
		%Exit with a condition	
		exit when count = 50 

	end


end
