begin

	integer user_age

	%Function no  parameters
	integer function myAge begin

		return (7000)
	end

	%Function with parameters
	integer function sum (integer num1, integer num2) begin

		return (num1 + num2)
	end

	%Procedure no parameters
	procedure greetings begin
	
		put "Hello, welcome!"
		return
	end


	%Procedure with parameters
	procedure ask(integer age) begin
		put "So, you are ", age, "years old, huh?"
		return
	end



	greetings %Procedure
	put "How old are you?"
	get user_age
	ask %Procedure
	put "My age is ", myAge %Function
	put skip
	put "Our ages added is", sum(myAge, user_age) %Function

end
